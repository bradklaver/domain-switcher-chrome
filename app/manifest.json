{
    "name": "D2",
    "version": "0.6.2",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "bower_components/jsuri/Uri.min.js",
            "scripts/chromereload.js",
            "scripts/background.js"
        ]
    },
	"commands": {
	/*  "_execute_page_action": {
		"suggested_key": {
		  "default": "Ctrl+Shift+E",
		  "windows": "Alt+Shift+P",
		  "mac": "Alt+Shift+P"
		}
	  },*/
      "opendev": {
        "suggested_key": {
          "windows": "Alt+Shift+1",
          "mac": "Command+Shift+1",
          "chromeos": "Ctrl+Shift+U",
          "linux": "Ctrl+Shift+J"
        },
        "description": "Open Dev Site"
      },
     "opentest": {
        "suggested_key": {
          "windows": "Alt+Shift+2",
          "mac": "Command+Shift+2",
          "chromeos": "Ctrl+Shift+U",
          "linux": "Ctrl+Shift+J"
        },
        "description": "Open Test Site"
      },
     "openprod": {
        "suggested_key": {
          "windows": "Alt+Shift+3",
          "mac": "Command+Shift+3",
          "chromeos": "Ctrl+Shift+U",
          "linux": "Ctrl+Shift+J"
        },
        "description": "Open Live Site"
      },
     "openlocal": {
        "suggested_key": {
          "windows": "Alt+Shift+4",
          "mac": "Command+Shift+4",
          "chromeos": "Ctrl+Shift+U",
          "linux": "Ctrl+Shift+J"
        },
        "description": "Open Local Site"
      },
	  "login": {
		"description": "Go to the login page for this domain"
	  }

	},
    "page_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "Domain Switcher",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "downloads",
        "storage"
    ]
}